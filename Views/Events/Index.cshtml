@model PaginatedList<Compensation.Models.Event> 

@{
 ViewData["Title"] = "Index";
 var isEventAscending = ViewBag.CurrentSort == "Event";
 var isClockInAscending = ViewBag.CurrentSort == "ClockIn";
}

<div class="d-flex justify-content-between align-items-center mb-4">
 <h1 class="fw-bold text-primary">Events</h1>
 <a asp-action="Create" class="btn btn-success btn-lg shadow">+ Create New</a>
</div>
<div class="table-responsive">
 <table class="table table-striped table-hover align-middle shadow-sm">
 <thead class="table-primary">
 <tr>
 <th>
 <a asp-controller="Events" asp-action="Index" asp-route-sortOrder="@ViewBag.EventSortParam" class="text-decoration-none text-dark">
 @Html.DisplayNameFor(model => model[0].Description_Event)
 @if (isEventAscending)
 {
 <span>&#9650;</span>
 }
 else
 {
 <span>&#9660;</span>
 }
 </a>
 </th>
 <th>@Html.DisplayNameFor(model => model[0].Venue)</th>
 <th>
 <a asp-controller="Events" asp-action="Index" asp-route-sortOrder="@ViewBag.ClockInSortParam" class="text-decoration-none text-dark">
 @Html.DisplayNameFor(model => model[0].ClockIn_Event)
 @if (isClockInAscending)
 {
 <span>&#9650;</span>
 }
 else
 {
 <span>&#9660;</span>
 }
 </a>
 </th>
 <th>@Html.DisplayNameFor(model => model[0].ClockOut_Event)</th>
 <th>@Html.DisplayNameFor(model => model[0].Fare.Fare_Value)</th>
 <th>@Html.DisplayNameFor(model => model[0].Profit)</th>
 <th class="text-end">Actions</th>
 </tr>
 </thead>
 <tbody>
@foreach (var item in Model) {
 <tr>
 <td>@Html.DisplayFor(modelItem => item.Description_Event)</td>
 <td>@Html.DisplayFor(modelItem => item.Venue.Description)</td>
 <td>@Html.DisplayFor(modelItem => item.ClockIn_Event)</td>
 <td>@Html.DisplayFor(modelItem => item.ClockOut_Event)</td>
 <td>@Html.DisplayFor(modelItem => item.Fare.Fare_Value)</td>
 <td>@Html.DisplayFor(modelItem => item.Profit)</td>
 <td class="text-end">
 <a asp-action="Edit" asp-route-id="@item.Event_Id" class="btn btn-sm btn-outline-primary me-1">Edit</a>
 <a asp-action="Details" asp-route-id="@item.Event_Id" class="btn btn-sm btn-outline-info me-1">Details</a>
 <a asp-action="Delete" asp-route-id="@item.Event_Id" class="btn btn-sm btn-outline-danger">Delete</a>
 </td>
 </tr>
}
 </tbody>
 </table>
</div>

<nav aria-label="Page navigation example">
 <ul class="pagination justify-content-center">
 <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
 <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex -1)" asp-route-sortOrder="@ViewBag.CurrentSort">Previous</a>
 </li>
 @for (int i =1; i <= Model.TotalPages; i++)
 {
 <li class="page-item @(i == Model.PageIndex ? "active" : "")">
 <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-sortOrder="@ViewBag.CurrentSort">@i</a>
 </li>
 }
 <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
 <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex +1)" asp-route-sortOrder="@ViewBag.CurrentSort">Next</a>
 </li>
 </ul>
</nav>
