                                </div>
                                <div class="mb-3">
                                    <label asp-for="ClockIn_Event" class="form-label"></label>
                                    <input asp-for="ClockIn_Event" class="form-control" />
                                    <span asp-validation-for="ClockIn_Event" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ClockOut_Event" class="form-label"></label>
                                    <input asp-for="ClockOut_Event" class="form-control" />
                                    <span asp-validation-for="ClockOut_Event" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Fare_Id" class="form-label"></label>
                                    <select asp-for="Fare_Id" class="form-select" required="required" asp-items="ViewBag.Fare_Id">
                                        <option>--Select Fare--</option>
                                    </select>
                                    <span asp-validation-for="Fare_Id" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Employee_Id" class="form-label"></label>
                                    <select asp-for="Employee_Id" class="form-select" required="required" asp-items="ViewBag.Employee_Id">
                                        <option>--Select Employee--</option>
                                    </select>
                                    <span asp-validation-for="Employee_Id" class="text-danger"></span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <input type="submit" value="Save" class="btn btn-success px-4" />
                                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
