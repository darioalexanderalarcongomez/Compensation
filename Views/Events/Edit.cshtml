@model Compensation.ViewModel.EventViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Event_Id" />
            <div class="form-group">
                <label asp-for="Description_Event" class="control-label"></label>
                <input asp-for="Description_Event" class="form-control" />
                <span asp-validation-for="Description_Event" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClockIn_Event" class="control-label"></label>
                <input asp-for="ClockIn_Event" class="form-control" />
                <span asp-validation-for="ClockIn_Event" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClockOut_Event" class="control-label"></label>
                <input asp-for="ClockOut_Event" class="form-control" />
                <span asp-validation-for="ClockOut_Event" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fare_Id" class="control-label"></label>
                <select asp-for="Fare_Id" class="form-control" required="required" asp-items="ViewBag.Fare_Id">
                    <option>--Select Fare--</option>
                </select>
                <span asp-validation-for="Fare_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee_Id" class="control-label"></label>
                <select asp-for="Employee_Id" class="form-control" required="required" asp-items="ViewBag.Employee_Id">
                    <option>--Select Employee--</option>
                </select>
                <span asp-validation-for="Employee_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venue_Id" class="control-label"></label>
                <select asp-for="Venue_Id" class="form-control" required="required" asp-items="ViewBag.Venue_Id">
                    <option>--Select Venue--</option>
                </select>

            <div class="d-flex justify-content-between mt-3">
                <input type="submit" value="Save" class="btn btn-success px-4" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

