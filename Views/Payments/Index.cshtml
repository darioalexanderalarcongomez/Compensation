@model IEnumerable<Compensation.Models.Payment>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold text-primary">Payments</h1>
    <a asp-action="Create" class="btn btn-success btn-lg shadow">+ Create New</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover align-middle shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Event.Description_Event)</th>
                <th>@Html.DisplayNameFor(model => model.Event.Week)</th>
                <th>@Html.DisplayNameFor(model => model.TypePayment.DescriptionType)</th>
                <th>@Html.DisplayNameFor(model => model.PaymentOrder)</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Event.Description_Event)</td>
                <td>@Html.DisplayFor(modelItem => item.Event.Week)</td>
                <td>@Html.DisplayFor(modelItem => item.TypePayment.DescriptionType)</td>
                <td>@Html.DisplayFor(modelItem => item.PaymentOrder)</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Payment_Id" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Payment_Id" class="btn btn-sm btn-outline-info me-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Payment_Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
}
        </tbody>
    </table>
</div>
